<map proto="1.4.0">
<name>PacMan Vs. Ghosts</name>
<version>1.0.0</version>
<objective>
    Eliminate the Pac-man before he eats all yellow dots, which are made out of wool.
</objective>
<authors>
    <author uuid="4a05be89-8b8b-4dfe-848e-df6c42967c9a"> <!-- ogel -->
</authors>
<contributors>
    <contributor uuid="dff980ed-9f69-491e-b79c-30c21350baf2" contribution="XML"/> <!-- DoomRobotBoy -->
</contributors>
<teams>
    <team id="pac" color="yellow" max="1" respawn-limit="2">Pacman</team>
    <team id="ghosts" color="purple" max="4">Ghosts</team>
</teams>
<kits>
    <kit id="spawn-kit" potion-particles="false" force="true">
        <potion duration="oo">night vision</potion>
    </kit>
    <kit id="pac-kit" parents="spawn-kit">
        <item slot="0" enchantment="dig speed:5">shears</item>
        <helmet locked="true" enchantment="durability:10">gold helmet</helmet>
        <chestplate locked="true" enchantment="durability:10">gold chestplate</chestplate>
        <leggings locked="true" enchantment="durability:10">gold leggings</leggings>
        <boots locked="true" enchantment="durability:10">gold boots</boots>
        <potion duration="4">heal</potion>
        <potion duration="oo" amplifier="4">speed</potion>
    </kit>
    <kit id="ghosts-kit" parents="spawn-kit">
        <item slot="0" enchantment="damage all:2">gold sword</item>
        <helmet locked="true" damage="-3000" color="4C7F99">leather helmet</helmet>
        <chestplate locked="true" damage="-3000" color="4C7F99">leather chestplate</chestplate>
        <leggings locked="true" damage="-3000" color="4C7F99">leather leggings</leggings>
        <boots locked="true" damage="-3000" color="4C7F99">leather boots</boots>
        <potion duration="oo" amplifier="3">speed</potion>
    </kit>
</kits>
<filters>
    <filter name="only-yellow">
        <all>
            <block>wool:4</block>
            <team>pac</team>
        </all>
    </filter>
    <filter name="deny-ghosts">
        <not>
            <team>ghosts</team>
        </not>
    </filter>
</filters>
<regions>
    <cylinder name="pac-man-spawn" base="141.5,40,31.5" radius="1"/>
    <union name="ghosts-spawns">
        <cylinder base="139.5,43,0.5" radius="1"/>
        <cylinder base="141.5,43,-0.5" radius="1"/>
        <cylinder base="143.5,43,0.5" radius="1"/>
        <cylinder base="141.5,43,1.5" radius="1"/>
    </union>
    <cylinder name="obs-spawn" base="141.5,40,1.5" radius="1"/>
    <apply block="only-yellow">
        <rectangle min="oo,oo" max="-oo,-oo"/>
    </apply>
    <apply block="deny-ghosts">
        <rectangle min="oo,oo" max="-oo,-oo"/>
    </apply>
</regions>
<portals>
    <portal x="@114.5" y="@40" z="@3.5" yaw="-90">
        <region>
            <cuboid min="195,41,6" max="196,44,1"/>
        </region>
    </portal>
    <portal x="@192.5" y="@40" z="@3.5" yaw="90">
        <region>
            <cuboid min="112,41,1" max="111,44,6"/>
        </region>
    </portal>
</portals>
<spawns>
    <spawn team="pac" kit="pac-kit"/>
        <regions yaw="180">
            <cylinder base="153.5,43,8.5" radius="1" height="0"/>
        </regions>
    </spawn>
    <spawn team="ghosts" kit="ghosts-kit"/>
        <regions yaw="180">
            <cylinder base="153.5,40,26.5" radius="1" height="0"/>
        </regions>
    </spawn>
    <default kit="spawn-kit">
        <regions yaw="0">
            <cylinder base="153.5,43,8.5" radius="1" height="0"/>
        </regions>
    </default>
</spawns>
<destroyables name="Yellow Dots" materials="gold block" completion="100%" show-progress="true">
    <destroyable owner="ghosts">
        <region>
            <cuboid min="193,41,49" max="114,42,-36"/>
        </region>
    </destroyable>
</destroyables>
<time result="ghosts">6m</time>
<hunger>
    <depletion>off</depletion>
</hunger>
<timelock>on</timelock>
</map>
