<map proto="1.3.6">
<name>Dawn of Desolation</name>
<version>1.0.0</version>
<objective>Capture the enemy wool!</objective>
<authors>
    <author uuid="ca2306d1-1198-4d46-8c44-a82f5b3c8a4e"/>
    <!-- BeanButt -->
</authors>
<contributors>
    <contributor uuid="dff980ed-9f69-491e-b79c-30c21350baf2" contribution="XML"/>
    <!-- DoomRobotBoy -->
</contributors>
<teams>
    <team id="red" color="dark red" max="10">Red Team</team>
    <team id="blue" color="blue" max="10">Blue Team</team>
</teams>
<filters>
    <filter name="only-red">
        <team>red</team>
    </filter>
    <filter name="only-blue">
        <team>blue</team>
    </filter>
</filters>
<regions>
    <rectangle name="map" min="oo,oo" max="-oo,-oo"/>
    <rectangle name="build-region" min="-35,73" max="34,-72"/>
    <cuboid name="red-wool-source" min="2,25,-60" max="-3,30,-65"/>
    <cuboid name="blue-wool-source" min="-3,25,61" max="2,30,66"/>
    <union name="center-wools">
        <block>-0.5,27,-62.5</block>
        <block>-0.5,27,63.5</block>
    </union>
    <union name="monuments">
        <cuboid min="-2,6,-49" max="1,9,-51"/>
        <cuboid min="1,6,50" max="-2,9,52"/>
    </union>
<!-- Applied -->
    <apply block="only-blue" message="You may not break your own wool source.">
        <region name="red-wool-source"/>
    </apply>
    <apply block="only-red" message="You may not break your own wool source.">
        <region name="blue-wool-source"/>
    </apply>
    <apply block="deny-world" message="You may not break the center block of this wool source.">
        <region name="center-wools"/>
    </apply>
    <apply block-break="deny-world" message="You may not destroy the wool monument!">
        <region name="monuments"/>
    </apply>
    <apply block="deny-world" message="You may not build in the void.">
        <negative>
            <region name="build-region"/>
        </negative>
    </apply>
</regions>
<wools>
    <wool team="red" color="blue" location="-0.5,27,63.5">
        <monument><block>-0.5,7,-49.5</block></monument>
    </wool>
    <wool team="blue" color="red" location="-0.5,27,-62.5">
        <monument><block>-0.5,7,50.5</block></monument>
    </wool>
</wools>
<spawns>
    <spawn team="red">
        <regions yaw="0">
            <cylinder base="-0.5,44,-62.5" radius="1" height="0"/>
        </regions>
    </spawn>
    <spawn team="blue">
        <regions yaw="180">
            <cylinder base="-0.5,44,63.5" radius="1" height="0"/>
        </regions>
    </spawn>
    <default>
        <regions yaw="-90">
            <cylinder base="0.5,68,0.5" radius="1" height="0"/>
        </regions>
    </default>
</spawns>
<portals>
<!-- Red -->
    <portal x="@-36.5" y="@36" z="@-43.5">
        <region><cuboid min="-4,44,-61" max="-5,47,-64"/></region>
    </portal>
    <portal x="@35.5" y="@36" z="@-43.5">
        <region><cuboid min="3,44,61" max="4,47,-64"/></region>
    </portal>
<!-- Blue -->
    <portal x="@35.5" y="@36" z="@44.5">
        <region><cuboid min="3,44,62" max="4,47,-65"/></region>
    </portal>
    <portal x="@-36.5" y="@36" z="@44.5">
        <region><cuboid min="-4,44,62" max="-5,47,65"/></region>
    </portal>
</portals>
<itemremove>
    <item>obsidian</item>
    <item>smooth brick:0</item>
    <item>smooth brick:3</item>
    <item>beacon</item>
    <item>cobblestone stairs</item>
    <item>smooth stairs</item>
    <item>hard clay</item>
</itemremove>
<maxbuildheight>42</maxbuildheight>
</map>
