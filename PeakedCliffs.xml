<?xml version="1.0"?>
<map proto="1.3.5">
<name>Peaked Cliffs</name>
<version>1.0.0</version>
<objective>Defend or Destroy the monument with only 15 minutes left!</objective>
<authors>
    <author contribution="Map Design and XML">DoomRobotBoy</author>
    <author contribution="Map Design and Idea">rockymine</author>
</authors>
<contributors>
    <contributor contribution="MapDev Server Host">jollee999</contributor>
</contributors>
<teams>
   <team color="dark red" max="25" max-overfill="27">Attackers</team>
   <team color="blue" max="25" max-overfill="27">Defenders</team>
</teams>
<kits>
    <kit name="spawn" force="true">
        <item slot="1">bow</item>
        <potion duration="5" amplifier="10">heal</potion>
    </kit>
    <kit name="attacker" parents="spawn">
        <item slot="2" enchantment="digspeed:1" name="`8Pickaxe" lore="Use this to mine the Golden Treasure!">stone pickaxe</item>
        <item slot="3" amount="64">bread</item>
        <item slot="4">golden apple</item>
        <item slot="5">TNT</item>
        <item slot="28" amount="48">arrow</item>
        <helmet damage="-3000">chainmail helmet</helmet>
        <leggings color="cd0000">leather leggings</leggings>
        <boots color="cd0000">leather boots</boots>
    </kit>
    <kit name="defender" parents="spawn">
        <item slot="2" amount="64">bread</item>
        <item slot="3">golden apple</item>
        <item slot="4">TNT</item>
        <item slot="28" amount="64">arrow</item>
        <item slot="19" amount="16">arrow</item>
        <helmet damage="-3000">gold helmet</helmet>
        <leggings color="0066cc">leather leggings</leggings>
        <boots color="0066cc">leather boots</boots>
    </kit>
</kits>
<spawns>
    <default yaw="-90">
        <cylinder base="191.5,63,75.5" radius="2" height="0"/>
    </default>
    <spawn team="attackers" kit="attacker" yaw="180">
        <cylinder base="191.5,46,142.5" radius="1" height="0"/>
    </spawn>
    <spawn team="defenders" kit="defender" yaw="0">
        <cylinder base="191.5,13,18.5" radius="1" height="0"/>
    </spawn>
</spawns>
<filters>
    <filter name="attackers-only">
        <team>attackers</team>
    </filter>
    <filter name="defenders-only">
        <team>defenders</team>
    </filter>
    <filter name="only-gold-break">
        <team>attackers</team>
        <block>gold block</block>
    </filter>
    <filter name="only-gold-place">
        <team>defenders</team>
        <block>gold block</block>
    </filter>
    <filter name="deny-tnt">
        <not>
            <cause>explosion</cause>
        </not>
    </filter>
</filters>
<regions>
    <apply block="only-gold" message="You may only break gold blocks">
        <rectangle min="oo,oo" max="-oo,-oo"/>
    </apply>
</regions>
<destroyables>
    <destroyable name="Golden Treasure" owner="Defenders" show-progress="true" materials="gold block" completion="100%" repairable="true">
        <cuboid min="4.5,51,107.5" max="16.5,54,113.5"/>
   </destroyable>
</destroyables>
<killreward>
    <item>TNT</item>
</killreward>
<killreward>
    <filter>
        <kill-streak count="2"/>
    </filter>
    <item>golden apple</item>
</killreward>
<killreward>
    <filter>
        <kill-streak count="4"/>
    </filter>
    <item>golden apple</item>
</killreward>
<killreward>
    <filter>
        <kill-streak count="6"/>
    </filter>
    <item>golden apple</item>
</killreward>
<killreward>
    <filter>
        <kill-streak count="8"/>
    </filter>
    <item>golden apple</item>
</killreward>
<killreward>
    <filter>
        <kill-streak count="10"/>
    </filter>
    <item>golden apple</item>
</killreward>
<toolrepair>
    <tool>iron sword</tool>
    <tool>bow</tool>
    <tool>iron axe</tool>
    <tool>stone pickaxe</tool>
</toolrepair>
<itemremove>
    <item>leather chestplate</item>
    <item>leather leggings</item>
    <item>leather boots</item>
    <item>bread</item>
</itemremove>
<time result="defenders">25m</time>
<timelock>on</timelock>
<maxbuildheight>50</maxbuildheight>
</map>
