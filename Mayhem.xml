<map proto="1.4.0">
<name>Mayhem</name>
<version>1.0.0</version>
<objective>
    Attackers win if they explode a bomb or kill all defenders. Defenders win if they defuse a bomb or kill all attackers.
</objective>
<authors>
    <author uuid="4a05be89-8b8b-4dfe-848e-df6c42967c9a"/>
<!-- ogel -->
    <author uuid="dff980ed-9f69-491e-b79c-30c21350baf2"/>
<!-- DoomRobotBoy -->
</authors>
<teams>
    <team show-name-tags="allies" color="dark red" max="8" max-overfill="9">Terrorists</team>
    <team show-name-tags="allies" color="blue" max="8" max-overfill="9">Militia</team>
</teams>
<spawns>
    <spawn team="red" kit="red">
        <regions yaw="-45">
            <cylinder base="-7.5,5,177.5" radius="1" height="0"/>
        </regions>
    </spawn>
    <spawn team="blue" kit="blue">
        <regions yaw="90">
            <cylinder base="91.5,5,274.5" radius="1" height="0"/>
        </regions>
    </spawn>
    <default>
        <regions yaw="0">
            <cylinder base="20.5,5,188.5" radius="1" height="0"/>
        </regions>
    </default>
</spawns>
<kits>
    <kit id="spawn">
        <item slot="0" damage="-3000" attributes="generic.attackDamage:add:0.1">stone sword</item>
        <item slot="1" damage="-3000">bow</item>
        <item slot="2" amount="32">bread</item>
        <item slot="3">golden apple</item>
        <item slot="4">torch</item>
        <item slot="5" name="`4Brick`7`o" projectile="brick">clay brick</item>
        <helmet locked="true" damage="-3000">iron helmet</helmet>
        <leggings locked="true" damage="-3000">chainmail leggings</leggings>
    </kit>
    <kit id="red" parents="spawn">
        <chestplate locked="true" color="907D66" damage="-3000">leather chestplate</chestplate>
        <boots locked="true" color="907D66" damage="-3000">leather boots</boots>
    </kit>
    <kit id="blue" parents="spawn">
        <chestplate locked="true" color="907D66" damage="-3000">leather chestplate</chestplate>
        <boots locked="true" color="907D66" damage="-3000">leather boots</boots>
    </kit>
</kits>
<projectiles>
    <projectile id="brick" name="Brick" velocity="5" damage="1" projectile="Snowball" throwable="true" cooldown="2s"/>
</projectiles>
<killreward>
    <item>golden apple</item>
</killreward>
<filters>
    <filter id="only-some">
        <block>fence</block>
    </filter>
</filters>
<regions>
    <apply block="only-some">
        <rectangle min="-oo,-oo" max="oo,oo"/>
    </apply>
</regions>
<blitz>
    <time>8m</time>
    <lives>1</lives>
    <title>Blitz</title>
</blitz>
<include src="blitz-global.xml"/>
<itemremove>
    <item>iron helmet</item>
    <item>leather chestplate</item>
    <item>chainmail leggings</item>
    <item>leather boots</item>
    <item>bread</item>
    <item>golden apple</item>
    <item>fence</item>
</itemremove>
<timelock>on</timelock>
</map>
