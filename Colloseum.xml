<map proto="1.3.5">
<name>Colloseum</name>
<version>1.0.0</version>
<objective>Capture the flag by being the last team alive!</objective>
<authors>
    <author uuid="dff980ed-9f69-491e-b79c-30c21350baf2"/> <!-- DoomRobotBoy -->
</authors>
<contributors>
    <contributor uuid="a4266139-34f3-46c5-a730-f8828376a15a" contribution="Build Help"/> <!-- LArrowHead -->
</contributors>
<broadcasts>
    <tip after="1s">You can capture the flag at the beacon after the entire enemy team is dead.</tip>
    <tip after="2s">Note that teams can respawn when in possession of the flag.</tip>
    <tip after="3s">Teams can also respawn when no one has control of the flag.</tip>
    <tip after="4s">You can destroy spruce leaves.</tip>
    <tip after="5s">Gold pressure plates are jump pads and iron pressure plates are health kits.</tip>
</broadcasts>
<teams>
    <team id="blue" color="blue" max="16" max-overfill="18">Blue Team</team>
    <team id="red" color="dark red" max="16" max-overfill="18">Red Team</team>
</teams>
<kits>
    <kit name="all">
        <potion duration="oo">night vision</potion>
    </kit>
    <kit name="spawn" parents="all">
        <item slot="0" unbreakable="true">stone sword</item>
        <item slot="1" unbreakable="true" enchantment="arrow_infinite:1">bow</item>
        <item slot="28" amount="1">arrow</item>
        <chestplate unbreakable="true">iron chestplate</chestplate>
        <item slot="2" amount="64">golden carrot</item>
        <potion duration="7" amplifier="1">speed</potion>
        <potion duration="7">slow digging</potion>
        <health>20</health>
    </kit>
    <kit name="red-kit" parents="spawn">
        <helmet unbreakable="true" color="AF002A">leather helmet</helmet>
        <leggings unbreakable="true" color="AF002A">leather leggings</leggings>
        <boots unbreakable="true" color="AF002A" enchantment="protection_fall:1">leather boots</boots>
    </kit>
    <kit name="blue-kit" parents="spawn">
        <helmet unbreakable="true" color="6E6EF9">leather helmet</helmet>
        <leggings unbreakable="true" color="6E6EF9">leather leggings</leggings>
        <boots unbreakable="true" color="6E6EF9" enchantment="protection_fall:1">leather boots</boots>
    </kit>
    <kit name="health-kit" force="true">
        <potion duration="30" amplifier="1">health boost</potion>
    </kit>
    <kit name="flag" force="true">
        <potion duration="oo" amplifier="-3">health boost</potion>
    </kit>
    <kit name="reset-health" force="true">
        <potion duration="1" amplifier="0">health boost</potion>
        <potion duration="1" amplifier="10">regeneration</potion>
    </kit>
</kits>
<killreward>
    <item>golden apple</item>
</killreward>
<itemremove>
    <item>leather helmet</item>
    <item>iron chestplate</item>
    <item>leather leggings</item>
    <item>leather boots</item>
    <item>stone sword</item>
    <item>bow</item>
    <item>arrow</item>
    <item>golden carrot</item>
    <item>golden apple</item>
</itemremove>
<filters>
    <filter name="respawn">
        <same-team>
            <carrying-flag>center-flag</carrying-flag>
        </same-team>
    </filter>
    <filter name="health-kit-filter">
        <not>
            <same-team>
                <carrying-flag>center-flag</carrying-flag>
            </same-team>
        </not>
    </filter>
    <filter name="hill">
        <objective>hill</objective>
    </filter>
</filters>
<regions>
    <apply block="deny-all">
        <rectangle name="map" min="oo,oo" max="-oo,oo"/>
    </apply>
    <apply velocity="0.0,1.2,0.0">
        <block>-260.5,5,53.5</block>
        <block>-223.5,5,98.5</block>
        <block>-260.5,5,143.5</block>
        <block>-297.5,5,98.5</block>
    </apply>
    <apply velocity="0.7,0.6,0.7">
        <block>-270.5,10,88.5</block>
    </apply>
    <apply velocity="-0.7,0.6,-0.7">
        <block>-250.5,10,108.5</block>
    </apply>
    <apply kit="health-kit" filter="health-kit-filter">
        <block>-240.5,5,131.5</block>
        <block>-280.5,5,131.5</block>
        <block>-280.5,5,65.5</block>
        <block>-240.5,5,65.5</block>
    </apply>
</regions>
<control-points>
    <control-point id="hill" capture-players="exclusive" capture-time="3s" show-progress="true" point="0">
        <capture><region name="map"/></capture>
        <progress><cylinder base="0.5,22,7.5" radius="7" height="4"/></progress>
        <captured><cylinder base="0.5,64,7.5" radius="7" height="5"/></captured>
    </control-point>
</control-points>
<spawns>
    <spawn team="red" kit="red-kit" yaw="-90" filter="respawn">
        <cylinder base="-294.5,18,98.5" radius="1" height="1"/>
    </spawn>
    <spawn team="blue" kit="blue-kit" yaw="90" filter="respawn">
        <cylinder base="-226.5,18,98.5" radius="1" height="1"/>
    </spawn>
    <default yaw="0" kit="all">
        <point>-260.5,30,98.5</point>
    </default>
</spawns>
<respawn spectate="true">
    <message>
        { translate: "death.respawn.confirmed.waiting.flagDropped" }
    </message>
</respawn>
<score>
    <limit>1</limit>
    <kills>0</kills>
    <deaths>0</deaths>
</score>
<flags>
    <net id="net" flag="center-flag" point="1" capture-filter="hill">
        <block>-260.5,5,98.5</block>
    </net>
    <post id="post" return-time="0s" respawn-time="10s">
        <block>-260.5,5,98.5</block>
    </post>
    <flag id="center-flag" name="Flag" color="white" shared="true" post="post" net="net" pickup-kit="flag" drop-kit="reset-health"/>
</flags>
</map>
