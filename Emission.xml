            <cuboid min="-704.5,8,-176.5" max="-703.5,8,-175.5"/>
        </regions>
    </spawn>
    <spawn team="blue" kit="blue">
        <regions yaw="135">
            <cuboid min="-660.5,8,-84.5" max="-661.5,8,-85.5"/>
        </regions>
    </spawn>
    <default>
        <regions yaw="90" kit="obs">
            <block>-725.5,22,-130.5"</block>
        </regions>
    </default>
</spawns>
