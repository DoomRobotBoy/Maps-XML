<map proto="1.4.0">
<name>Divergent</name>
<version>1.0.0</version>
<objective>Capture the other team's wool to win!</objective>
<authors>
    <author uuid="a4266139-34f3-46c5-a730-f8828376a15a"/> <!--  LArrowHead  -->
    <author uuid="dff980ed-9f69-491e-b79c-30c21350baf2"/> <!--  DoomyBoy  -->
</authors>
<broadcasts>
    <tip after="2s">In spawn there are tunnels leading down to the gold mines! From down there you can use the teleports or ladders to go back up.</tip>
</broadcasts>
<teams>
<team id="red-team" color="dark red" max="22" max-overfill="26">Red</team>
<team id="blue-team" color="blue" max="22" max-overfill="26">Blue</team>
</teams>
<spawns>
    <spawn team="red-team" kit="red">
        <regions yaw="">
            <point></point>
        </regions>
    </spawn>
    
    <default>
        <regions yaw="">
            <point></point>
        </regions>
    </default>
</spawns>
<kits>
    <kit id="spawn" force="true">
        <item slot="0" unbreakable="true">stone sword</item>
        <item slot="1" unbreakable="true">bow</item>
        <item slot="2" unbreakable="true">diamond pickaxe</item>
        <item slot="3" unbreakable="true" enchantment="dig speed:1">iron axe</item>
        <item slot="3" amount="64">bread</item>
        <item slot="4" damage="3" amount="6">smooth brick</item>
        <item slot="28" amount="1">arrow</item>
        <potion duration="5" amplifier="1">heal</potion>
    </kit>
    <kit id="blue-spawn" parents="spawn"></kit>
    <kit id="red-spawn" parents="spawn"></kit>
</kits>
<filters>
<not id="no-void">
<void/>
</not>
<not id="deny-blue">
<team>blue</team>
</not>
<not id="deny-red">
<team>red</team>
</not>
<not id="only-iron">
<not>
<material>iron block</material>
</not>
</not>
<deny id="deny-spawners">
<any>
<material>mob spawner</material>
<material>iron plate</material>
<material>gold plate</material>
</any>
</deny>
<not id="deny-open">
<any>
<material>dispenser</material>
</any>
</not>
</filters>
<regions>
<apply block="never" message="You may not modify the bottom part of the wool rooms!">
<region>
<union>
<union id="bt-bwr">
<cuboid id="lb-bwr" min="42,0,113" max="25,35,130"/>
<mirror normal="1,0,0" origin="0.5,29,68">
<region id="lb-bwr"/>
</mirror>
</union>
<mirror id="rt-bwr" normal="0,0,-1" origin="0.5,24,0.5">
<region id="bt-bwr"/>
</mirror>
<intersect>
<below y="38"/>
<union id="wool-rooms">
<region id="blue-rooms"/>
<region id="red-rooms"/>
</union>
</intersect>
</union>
</region>
</apply>
<apply enter="deny-blue" block="deny-blue" message="You may not enter or modify the wool rooms which you are defending!">
<region>
<union id="blue-rooms">
<rectangle id="light-blue" min="38,117" max="29,126"/>
<mirror id="cyan" normal="1,0,0" origin="0.5,29,68">
<region id="light-blue"/>
</mirror>
</union>
</region>
</apply>
<apply enter="deny-red" block="deny-red" message="You may not enter or modify the wool rooms which you are defending!">
<region>
<mirror id="red-rooms" normal="0,0,-1" origin="0.5,24,0.5">
<region id="blue-rooms"/>
</mirror>
</region>
</apply>
<apply block-place="never" block-break="only-iron" message="You may only break iron blocks in the base!">
<region>
<region id="blue-base"/>
<mirror id="red-base" normal="0,0,-1" origin="0.5,24,0.5">
<region id="blue-base"/>
</mirror>
</region>
</apply>
<apply enter="deny-red" message="You may not enter the enemy team's base!">
<region>
<rectangle id="blue-base" min="17,106" max="-16,180"/>
</region>
</apply>
<apply enter="deny-blue" message="You may not enter the enemy team's base!">
<region>
<region id="red-base"/>
</region>
</apply>
<apply block="never" message="You may not modify this lava pool!">
<region>
<!-- Blue Side -->
<cuboid min="20,0,92" max="25,38,103"/>
<cuboid min="-19,0,92" max="-24,38,103"/>
<union id="blue-large">
<union id="blue-1">
<cuboid min="12,0,71" max="8,29,66"/>
<cuboid min="8,0,70" max="3,29,64"/>
<cuboid min="3,0,68" max="-2,29,65"/>
</union>
<mirror normal="1,0,0" origin="0.5,29,68">
<region id="blue-1"/>
</mirror>
</union>
<!-- Red Side -->
<cuboid min="20,0,-91" max="25,38,-102"/>
<cuboid min="-19,0,-91" max="-24,38,-102"/>
<mirror normal="0,0,-1" origin="0.5,24,0.5">
<region id="blue-large"/>
</mirror>
</region>
</apply>
<apply block="deny-spawners" message="You may not break this sacred block!">
<region>
<everywhere/>
</region>
</apply>
<apply block="no-void" message="You may not modify the void area!">
<region>
<everywhere/>
</region>
</apply>
<apply use="deny-open" message="You may not open this!">
<region>
<everywhere/>
</region>
</apply>
</regions>
<toolrepair>
<tool>arrow</tool>
<tool>bow</tool>
<tool>iron sword</tool>
<tool>iron pickaxe</tool>
</toolrepair>
<itemremove>
<item>leaves</item>
<item>seeds</item>
<item>dirt</item>
<item>sapling</item>
<item>bread</item>
<item>gravel</item>
<item>flint</item>
<item>apple</item>
<item>tnt</item>
<item>chest</item>
<item>trapped chest</item>
</itemremove>
<wools team="blue">
    <wool color="orange" location="0.5,10,21.5">
        <monument>
            <block>-3,39,119</block>
        </monument>
    </wool>
</wools>
<wools team="red">
    <wool color="cyan" location="-32.5,26,121.5">
        <monument>
            <block>-3,39,-119</block>
        </monument>
    </wool>
</wools>
<timelock>on</timelock>
<maxbuildheight>48</maxbuildheight>
</map>
