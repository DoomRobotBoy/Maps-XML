<map proto="1.3.6">
<name>Carribean DTC</name>
<version>1.0.0</version>
<objective>Leak the enemy core and destroy their monuments!</objective>
<authors>
    <author>HIVE_Raven</author>
    <author>manaray13</author>
</authors>
<contributors>
    <contributor contribution="Aesthetics">scorch1183</contributor>
    <contributor contribution="General Help and Spawn Tunnels">Trikeri</contributor>
    <contributor contribution="Map Album and Feedback">_Solarus</contributor>
    <contributor contribution="Server, WE Help and Feedback">ShinyDialga45</contributor>
    <contributor contribution="Feedback">Kahlersforge</contributor>
    <contributor contribution="Feedback">ElectroidFilms</contributor>
    <contributor contribution="XML">DoomRobotBoy</contributor>
</contributors>
<teams>
    <team id="red" color="dark red" max="10">Red Team</team>
    <team id="blue" color="blue" max="10">Blue Team</team>
</teams>
<kits>
    <kit name="spawn">
        <potion duration="8" amplifier="10">damage resistance</potion>
    </kit>
</kits>
<filters>
    <filter name="deny-void">
        <deny>
            <void/>
        </deny>
    </filter>
    <filter name="deny-tnt-damage">
        <not>
            <all>
                <cause>explosion</cause>
                <block>tnt</block>
            </all>
        </not>
    </filter>
    <!--
    <filter name="deny-dispenser">
        <not>
            <block>dispenser</block>
        </not>
    </filter>
    -->
</filters>
<regions>
    <rectangle name="map" min="oo,oo" max="-oo,-oo"/>
    <cuboid name="red-core" min="89,11,-201" max="100,21,-190"/>
    <cuboid name="blue-core" min="28,11,-82" max="17,21,-93"/>
    <apply block="deny-all">
        <union name="spawns-stuff">
        <!--  Red Spawn  -->
            <complement>
                <rectangle min="39,-216" max="81,-273"/>
                <cuboid min="79,0,-217" max="39,19,-216"/>
            </complement>
        <!--  Blue Spawn  -->
            <complement>
                <rectangle min="78,-67" max="39,-10"/>
                <cuboid min="39,0,-66" max="78,19,-67"/>
            </complement>
        </union>
    </apply>
    <apply block="deny-tnt-damage">
        <region name="spawns-stuff"/>
    </apply>
    <apply block="deny-void" message="You may not edit the void area!">
        <complement>
            <rectangle name="map" min="oo,oo" max="-oo,-oo"/>
            <rectangle name="exception" min="-17,-100" max="134,-183"/>
        </complement>
    </apply>
    <!--
    <apply use="deny-dispenser">
        <region name="map"/>
    </apply>
    -->
</regions>
<spawns>
    <spawn team="red" kit="spawn" yaw="0">
        <regions>
            <cylinder base="58.5,68,-269.5" radius="1"/>
        </regions>
    </spawn>
    <spawn team="blue" kit="spawn" yaw="180">
        <regions>
            <cylinder base="58.5,68,-13.5" radius="1"/>
        </regions>
    </spawn>
    <default>
        <regions>
            <cuboid min="57,68,-269" max="60,68,-270"/>
        </regions>
    </default>
</spawns>
<destroyables materials="coal block" completion="100%">
    <destroyables owner="red">
        <destroyable name="Western Monument">
            <region><cuboid min="46,16,26" max="45,14,25"/></region>
        </destroyable>
        <destroyable name="Eastern Monument">
            <region><cuboid min="46,16,26" max="45,14,25"/></region>
        </destroyable>
    </destroyables>
    <destroyables owner="blue">
        <destroyable name="Western Monument">
            <region><cuboid min="46,16,26" max="45,14,25"/></region>
        </destroyable>
        <destroyable name="Eastern Monument">
            <region><cuboid min="46,16,26" max="45,14,25"/></region>
        </destroyable>
    </destroyable>
</destroyables>
<cores material="obsidian" leak="5" mode-changes="true">
    <core name="Core" team="red" region="red-core"/>
    <core name="Core" team="blue" region="blue-core"/>
</cores>
<modes>
    <mode after="10m" material="stained glass:15" name="`7STAINED GLASS `rCORE MODE"/>
</modes>
<toolrepair>
    <tool>iron sword</tool>
    <tool>bow</tool>
    <tool>diamond pickaxe</tool>
    <tool>stone axe</tool>
</toolrepair>
<itemremove>
    <item>chainmail leggings</item>
    <item>obsidian</item>
    <item>dispenser</item>
    <item>gold block</item>
</itemremove>
<blockdrops>
    <rule>
        <filter>
            <block>double step:0</block>
        </filter>
        <drops>
            <item>wood:0</item>
        </drops>
    </rule>
</blockdrops>
<broadcasts>
    <tip after="10s">`7GLASS`r CORE at 20 minutes.</tip>
</broadcasts>
<maxbuildheight>36</maxbuildheight>
</map>
